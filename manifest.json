{
  "manifest_version": 2,
  "name": "Ya.Music Hotkeys",
  "description": "This extension will enable hotkeys for Ya.Music",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://music.yandex.ru/*"],
      "js": [
        "page.js",
        "yamusic.js"
      ]
    },
    {
      "matches": ["https://radio.yandex.ru/*"],
      "js": [
        "page.js",
        "yaradio.js"
      ]
    }
  ],
  "commands": {
    "prev-track": {
      "suggested_key": {
        "default": "Ctrl+PageUp"
      },
      "description": "Play previous track"
    },
    "pause-track": {
      "suggested_key": {
        "default": "Ctrl+End"
      },
      "description": "Pause/Unpause track"
    },
    "next-track": {
      "suggested_key": {
        "default": "Ctrl+PageDown"
      },
      "description": "Play next track"
    }
  }
}
